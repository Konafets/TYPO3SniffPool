{
	"name": "typo3-ci/typo3sniffpool",
	"type": "phpcodesniffer-standard",
	"description": "This repository contains custom sniffs which are compatible with the PHP_CodeSniffer. Understand this package as a sniff pool. It contains all custom sniffs for the TYPO3 project.",
	"homepage": "https://github.com/typo3-ci/TYPO3SniffPool",
	"keywords": ["typo3", "phpcs", "standards", "coding guidelines", "codesniffer", "quality assurance"],
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "Stefano Kowalke",
			"email": "blueduck@gmx.net",
			"role": "lead"
		},
		{
			"name": "Andy Grunwald",
			"email": "andygrunwald@gmail.com",
			"role": "lead"
		}
	],

	"repositories": [
		{
			"type": "git",
			"url": "https://github.com/Konafets/ComposerPlugins"
		}
	],

	"require": {
		"squizlabs/php_codesniffer": "3.0.*@dev",
		"simplyadmire/composer-plugins": "dev-patch-2"
	},

	"require-dev": {
		"phpunit/phpunit": "~4.6"
	},

	"suggest": {
		"typo3-ci/typo3cms": "The coding standard for TYPO3 CMS",
		"typo3-ci/typo3flow": "The coding standard for TYPO3 Flow"
	},

	"replace": {
		"typo3/codesniffer": "*"
	},

	"support": {
		"issues": "https://github.com/typo3-ci/TYPO3SniffPool/issues",
		"wiki": "https://github.com/typo3-ci/TYPO3SniffPool/wiki",
		"source": "https://github.com/typo3-ci/TYPO3SniffPool.git"
	},

	"autoload": {
		"classmap": [
		"Sniffs/"
		]
	},

	"extra": {
		"branch-alias": {
			"dev-master": "1.0.x-dev",
			"dev-develop": "2.0.x-dev"
		}
	}
}
